---
import BaseLayout from "@/layout/baseLayout.astro";
import CustomInput from "@/components/customInput.astro"
---


<BaseLayout title="Notre Association - H2VL">
    <section id="main-content-wrapper" class="flex flex-col gap-8 p-5 max-w-[2000px]">
        <span class="font-bold text-2xl">Contact</span>
        <form id="content-wrapper" class="flex flex-col gap-8">
            <CustomInput type="text" label="Nom" required />
            <CustomInput type="email" label="Email" required />
            <CustomInput type="textarea" label="Message" required />
        </form>
    </section>

</BaseLayout>
