---
import { v4 as uuid } from "uuid";

const {
    type,
    placeholder,
    label,
    inputClass,
    labelClass,
    hideLabel,
    required
} = Astro.props;
const id = uuid();
const baseClass = "px-3 py-0.5 border-2 border-gray-200 rounded-lg max-md:text-sm";
---
<div id={`wrapper-input-${id}`} class="flex flex-col gap-2">
    <label
        for={type === "textarea"? `textarea-${id}` :`input-${id}`}
        class={`${hideLabel?"sr-only":""} ${labelClass}`}
    >{label ?? "NO_LABEL_TEXT"} {required && <span class="text-red-600">*</span>}</label>
    {type === "textarea"?
        <textarea
                id={`textarea-${id}`}
                placeholder={placeholder ?? ""}
                class={`${baseClass} ${inputClass ?? ""}`}
        />
        :<input
            id={`input-${id}`}
            type={type ?? "text"}
            placeholder={placeholder ?? ""}
            class={`${baseClass} ${inputClass ?? ""}`}
        />
    }
</div>